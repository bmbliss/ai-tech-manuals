<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @manual.title %>
      </h2>
      <p class="mt-2 text-sm text-gray-500"><%= @manual.description %></p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to 'Add Section', new_manual_section_path(@manual), 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" %>
      <%= link_to 'Edit Manual', edit_manual_path(@manual), 
          class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  </div>

  <% if @sections.any? %>
    <div class="space-y-6">
      <div class="space-y-2">
        <% @sections.each_with_index do |section, index| %>
          <% if index == 0 %>
            <div class="flex justify-center">
              <%= link_to 'Insert Section Here', new_manual_section_path(@manual, prev_position: 0, next_position: section.position),
                  class: "text-sm text-blue-600 hover:text-blue-900" %>
            </div>
          <% end %>

          <div class="bg-white shadow rounded-lg" id="section_<%= section.id %>">
            <div class="p-6">
              <div class="prose max-w-none">
                <%= sanitize section.content %>
              </div>
              <div class="mt-4 flex justify-end space-x-3">
                <%= link_to 'Edit', edit_manual_section_path(@manual, section), 
                    class: "text-sm text-blue-600 hover:text-blue-900" %>
                <%= button_to 'Delete', manual_section_path(@manual, section), 
                    method: :delete,
                    class: "text-sm text-red-600 hover:text-red-900",
                    data: { turbo_confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>

          <div class="flex justify-center">
            <%= link_to 'Insert Section Here', 
                new_manual_section_path(@manual, 
                  prev_position: section.position,
                  next_position: @sections[index + 1]&.position || section.position + 1000),
                class: "text-sm text-blue-600 hover:text-blue-900" %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <p class="text-gray-500">No sections yet. Click 'Add Section' to create one.</p>
    </div>
  <% end %>
</div> 