<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @manual.title %>
      </h2>
      <p class="mt-2 text-sm text-gray-500"><%= @manual.description %></p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to 'Edit', edit_manual_path(@manual), class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
      <%= button_to 'Delete', manual_path(@manual), method: :delete, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700", data: { confirm: 'Are you sure?' } %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6 prose max-w-none">
      <%= sanitize @manual.content %>
    </div>
  </div>
</div> 